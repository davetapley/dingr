<h1><%= @tune.name %></h1>

<h2>Original <%= link_to nil, 'play', class: 'play-tune', data: { notes: @tune.notes.map(&:to_midi) } %></h2>

<%= render 'tune_notes', notes: @tune.notes %>

<% @matches.each_with_index do |m, i| %>
  <hr>
  <h2>Version <%= i + 1 %></h2>
  <h3>Transposition</h3>
  <%= m.map { |n0, n1| "#{ n0 } becomes #{ n1 }" }.to_sentence %>

  <h3>New notes</h3>

  <%= render 'tune_notes', notes: @tune.notes.map { |n| m[n] } %>

<% end %>
